@model Vidly.ViewModels.ListMovie
@{
    ViewBag.Title = "MovieList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Movies.Count == 0)
{
    <p>No movies added.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    Movies
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Movies)
            {
                <tr>
                    <td><a href="/Movies/Details/@movie.Id + 1">@movie.Name</a></td>
                </tr>
            }
        </tbody>
    </table>
}